<script type="text/html" id="accordionTmpl">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" data-bind="text: item.group, attr: { href: '#' + item.id() }"></a>
        </div>
        <div class="accordion-body collapse" data-bind="attr: { id: item.id }">
            <div class="accordion-inner">
                <div data-bind="foreach: { data: item.items, as: 'subitem' }">
                    <article class="article_container viewPost">
                        <dl class="dl-horizontal">
                            <dt>
                                <a href="http://www.gravatar.com/2d91df4526a7796b3cc1171583efa34a">
                                    <img class="img-polaroid" data-bind="attr: { src: subitem.gravatar }" /></a></dt>
                            <dd>
                                <div class="row itemsrow">
                                    <div data-bind="text: subitem.title" class="pull-left" />
                                    <div data-bind="text: '$' + subitem.price()" class="pull-right" />
                                </div>
                                <div class="row itemsrow">
                                    <div data-bind="text: subitem.location" class="pull-left" />
                                    <div data-bind="text: subitem.date" class="pull-right" />
                                </div>
                            </dd>
                        </dl>
                    </article>
                </div>
            </div>
        </div>
    </div>
</script>
