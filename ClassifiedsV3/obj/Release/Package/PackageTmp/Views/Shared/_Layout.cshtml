    <script src="~/Scripts/core/knockout.activity.js"></script>*@
@*    @Scripts.Render("~/bundles/knockOut")*@
    @Styles.Render("~/Content/css")

</head>
<body>

    <div id="busyindicator"></div>
    <header>
        <div class="row-fluid pull-right">
            <div id="userSettings">
                    @Html.Partial("_UserSettings")
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <img id="cmu_logo" class="img-polaroid" src="~/Content/images/cmu_logo.png" />
            </div>
            <div class="span5 offset1">
                <h1 class="app-heading">Classifieds</h1>
            </div>
            
        </div>
        @if (@User.Identity.IsAuthenticated)
        {
            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <span class="brand"></span>
                    <ul id="ul-navbar" class="nav" data-bind="foreach: navBarItems">
                        <li class="topNavBar"><a data-bind="attr: { href: hash, title: name}, text: name"></a></li>
                    </ul>
                </div>
            </div>
        }
    </header>
    <div id="body">        
        @RenderBody()
    </div>
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - CMU Classifieds</p>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
